{
  "name": "@repo/api",
  "description": "Hono API hosted on Firebase Functions, serving as the core backend.",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    ".env.*",
    ".env"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "tsup-node",
    "clean": "del-cli dist isolate tsconfig.tsbuildinfo",
    "lint": "eslint src --flag unstable_config_lookup_from_file --max-warnings 0 ",
    "deploy": "firebase deploy --project dev --only functions",
    "setup-env:dev": "infisical export --env dev --path=/api --format=dotenv > ./.env",
    "emulate": "infisical run --env dev --path=/api -- firebase emulators:start --project dev --only functions"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.5",
    "@hono/zod-openapi": "^0.19.8",
    "@repo/common": "workspace:*",
    "@repo/core": "workspace:*",
    "@typed-firestore/server": "1.0.0",
    "body-parser": "^1.20.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.3.2",
    "hono": "^4.8.2",
    "hono-firebase-functions": "^0.0.1",
    "nanoid": "^5.1.5",
    "nocache": "^4.0.0",
    "path-to-regexp": "^8.2.0",
    "remeda": "^2.20.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "^1.2.0",
    "@eslint/js": "^9.30.1",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4",
    "@types/express-serve-static-core": "^4.19.6",
    "@types/node": "^22.15.34",
    "del-cli": "^6.0.0",
    "eslint": "^9.30.1",
    "tsup": "^8.3.6",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  }
}
