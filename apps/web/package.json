{
  "name": "@repo/web",
  "description": "Nextjs web application",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "compile": "tsc --noEmit",
    "deploy:dev": "pnpm isolate && cd isolate && npm ci && infisical run --env dev --path=/web -- firebase deploy --only hosting --project=dev",
    "dev": "infisical run --env=dev --path=/web -- next dev",
    "build": "infisical run --env=dev --path=/web -- next build",
    "build:ci": "next build",
    "clean": "del-cli .next tsconfig.tsbuildinfo",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "i18next-resources-for-ts": "i18next-resources-for-ts interface -i ./app/i18n/locales/en -o ./@types/resources.d.ts",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@repo/common": "workspace:*",
    "@repo/openapi-schema": "workspace:*",
    "@repo/ui": "workspace:*",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.51.1",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@typed-firestore/react": "1.0.0",
    "@types/nanoid": "^3.0.0",
    "accept-language": "3.0.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^10.14.1",
    "i18next": "24.2.3",
    "i18next-browser-languagedetector": "8.0.4",
    "i18next-resources-to-backend": "1.2.1",
    "isolate-package": "~1.23.0",
    "lucide-react": "^0.474.0",
    "nanoid": "^5.1.5",
    "next": "^15.3.2",
    "openapi-fetch": "^0.14.0",
    "openapi-react-query": "^0.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.0.1",
    "roarr": "^7.21.1",
    "safe-stable-stringify": "^2.5.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.7.3",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@codecompose/typescript-config": "^1.2.0",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^9.0.13",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/addon-vitest": "^9.0.13",
    "@storybook/nextjs-vite": "^9.0.13",
    "@types/node": "^22.15.34",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "del-cli": "^6.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "eslint-plugin-storybook": "^9.0.13",
    "openapi-typescript": "^7.8.0",
    "playwright": "^1.53.1",
    "postcss": "^8.5.1",
    "storybook": "^9.0.14",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.3"
  }
}
